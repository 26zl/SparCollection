name: Build & deploy frontend to Azure Web App - sparcollection-web

# Denne workflowen er oppdatert for å støtte redeploy etter git reset/force-push
# Viktig: checkout bruker fetch-depth: 0 og concurrency kansellerer eldre kjøringer
on:
  push:
    branches: [ main ]
    paths:
      - 'frontend/**'
      - '.github/workflows/main_sparcollection-web.yml'
      - 'frontend/package.json'
      - 'frontend/package-lock.json'
      - 'frontend/src/**'
      - 'frontend/public/**'
      - 'package.json'
  workflow_dispatch:
    inputs:
      redeploy:
        description: 'Force redeploy of current main HEAD'
        required: false
        default: 'false'
        type: choice
        options: ['false','true']

# Sikrer at eldre workflow-kjøringer for samme branch blir stoppet
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

env:
  WEBAPP_NAME: 'sparcollection-web-faasfhqd6lxhbasgn'
  FUNCTION_API_URL: https://sparcollection-azfunc-fffjcpb5cphnfhac.northeurope-01.azurewebsites.net/api

jobs:
  build:
    # Kjør bare ved push til main, eller manuelt hvis redeploy == true
    if: >
      (github.event_name == 'push' && github.ref == 'refs/heads/main') ||
      (github.event_name == 'workflow_dispatch' && inputs.redeploy == 'true')
    runs-on: ubuntu-latest
    permissions:
      contents: read
    steps:
      - name: Checkout repository (full history)
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          clean: true

      - uses: actions/setup-node@v4
        with:
          node-version: '22.12.0'
          cache: 'npm'
          cache-dependency-path: 'frontend/package-lock.json'

      - name: Print commit (for sporbarhet)
        run: |
          echo "SHA=${GITHUB_SHA}"
          git log --oneline -n 5

      - name: Build frontend
        env:
          VITE_API_URL: ${{ env.FUNCTION_API_URL }}
        run: |
          npm --prefix frontend ci
          npm --prefix frontend run build

      - name: Create deploy bundle
        run: |
          rm -rf release && mkdir -p release
          rsync -a frontend/dist/ release/
          cp frontend/package.json release/
          (cd release && zip -qr ../release.zip .)

      - uses: actions/upload-artifact@v4
        with:
          name: webapp-bundle
          path: release.zip

  deploy:
    # Samme betingelse som build
    if: >
      (github.event_name == 'push' && github.ref == 'refs/heads/main') ||
      (github.event_name == 'workflow_dispatch' && inputs.redeploy == 'true')
    runs-on: ubuntu-latest
    needs: build
    steps:
      - uses: actions/download-artifact@v4
        with:
          name: webapp-bundle
          path: .

      - name: Deploy to Azure Web App
        id: deploy-to-webapp
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'sparcollection-web'
          slot-name: Production
          package: release.zip
          publish-profile: ${{ secrets.AZUREAPPSERVICE_PUBLISHPROFILE_9C1E2BCFB3124D8789D405CF06D7C9F3 }}
          clean: true